{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "includes": [
      "**",
      "!node_modules/**",
      "!.next/**",
      "!packages/tsconfig/**"
    ],
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "style": {
        "noNonNullAssertion": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "nursery": {
        "useUniqueElementIds": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  }
}
